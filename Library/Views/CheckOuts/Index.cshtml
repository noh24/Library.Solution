@{
  Layout = "_Layout";
}
@using Library.Models
<h1>History of Checkouts</h1>

@if (Model.Count != 0)
{
  <table>
    <tr>
      <th>Book Title</th>
      <th>Author</th>
      <th>Checkout Date</th>
      <th>Due Date</th>
      <th>Over Due</th>
    </tr>
  @foreach(CheckOut entry in Model)
  {
    <tr>
      <td>@Html.ActionLink($"{entry.Copy.Book.Title}", "Details", "Books", new { id = entry.Copy.BookId})</td>
    </tr>
  }
  </table>
}
<p>@Html.ActionLink("Check out a book", "Create")</p>